{
  "name": "terraform-aws",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
  "features": {
    "ghcr.io/devcontainers/features/terraform:1": {
      "version": "1.14.3",
      "tflint": "latest"
    },
    "ghcr.io/devcontainers/features/aws-cli:1.1.2": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "hashicorp.terraform"
      ],
      "settings": {
        "terraform.languageServer.enable": true
      }
    }
  },
  "postCreateCommand": "terraform -version && aws --version && tflint --version && tflint --init || true"
}